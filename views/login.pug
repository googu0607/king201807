extends layout

block header

block content
    div.contentwrap
        div.container
            div.col-sm-6.col-md-4.col-md-offset-4
                h2 로그인
                form.form-horizontal(method="post" action="/process/login")
                    label 아이디
                    input.form-control(type="text" name="id")
                    label 비밀번호
                    input.form-control(type="password" name="password")
                    input.btn.btn-primary.btn-block(type="submit" value="로그인" name="")
                div
                    button.btn.btn-primary.btn-sm(onclick="location.href='/'") 메인으로
                    button.btn.btn-primary.btn-sm(onclick="location.href='/signUpForm'") 회원가입
